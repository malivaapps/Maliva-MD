<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_filtersheet"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:context=".view.search.FiterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_filter"
            android:textColor="@color/text_primary"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:clickable="true"
            android:fontFamily="@font/poppins_semibold"
            android:onClick="onClick"
            android:text="@string/tv_reset"
            android:textColor="@color/primary"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.911"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_types"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_filter" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_button_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipActivities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_filter">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_shopping"
                android:layout_width="145dp"
                android:layout_height="60dp"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:background="@drawable/bg_category"
                android:text="@string/tc_Shopping"
                android:textAlignment="center"
                android:textSize="19sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_Outdoor"
                android:layout_width="200dp"
                android:layout_height="60dp"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_category"
                android:text="@string/tc_Outdoor"
                android:textAlignment="center"
                android:textSize="19sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_KidsFriendly"
                android:layout_width="160dp"
                android:layout_height="60dp"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:background="@drawable/bg_category"
                android:text="@string/tc_kids"
                android:textAlignment="center"
                android:textSize="19sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_Amusementpark"
                android:layout_width="185dp"
                android:layout_height="60dp"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_category"
                android:text="@string/tc_Amusementpark"
                android:textAlignment="center"
                android:textSize="19sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_Museum"
                android:layout_width="140dp"
                android:layout_height="60dp"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:background="@drawable/bg_category"
                android:text="@string/tc_museum"
                android:textAlignment="center"
                android:textSize="19sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_Hiking"
                android:layout_width="205dp"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_category"
                android:text="@string/tc_Hiking"
                android:textAlignment="center"
                android:textSize="19sp" />


        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/tv_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="324dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_categgorie"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.098"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chipActivities">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_Beach"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_category"
                android:text="@string/tc_beach"
                android:textAlignment="center"
                android:textSize="19sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_Forest"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_category"
                android:text="@string/tc_forest"
                android:textAlignment="center"
                android:textSize="19sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_Mountain"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="145dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_category"
                android:text="@string/tc_Mountain"
                android:textAlignment="center"
                android:textSize="19sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_lake"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_category"
                android:text="@string/tc_lake"
                android:textAlignment="center"
                android:textSize="19sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_waterfall"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_category"
                android:text="@string/tc_waterfall"
                android:textAlignment="center"
                android:textSize="19sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_Canyon"
                style="@style/Widget.Material3.Chip.Suggestion"
                android:layout_width="125dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_category"
                android:text="@string/tc_Canyon"
                android:textAlignment="center"
                android:textSize="19sp" />


        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_price"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.slider.RangeSlider
            android:id="@+id/sr_price"
            android:layout_width="355dp"
            android:layout_height="67dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:valueFrom="0"
            android:valueTo="100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_price"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tv_minprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="616dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_Minprice"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.098"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_maxprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="616dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_maxprice"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.902"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MinPrice"
            android:layout_width="163dp"
            android:layout_height="39dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toStartOf="@+id/MaxPrice"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sr_price">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edit_text"
                android:ems="10"></com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MaxPrice"
            android:layout_width="163dp"
            android:layout_height="39dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.878"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sr_price">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edit_text"
                android:ems="10"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tv_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="716dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_range"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/sr_range"

            android:layout_width="355dp"
            android:layout_height="67dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:valueFrom="0"
            android:valueTo="100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_range"
            app:values="@array/initial_slider_values"
            tools:ignore="SpeakableTextPresentCheck" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_minrange"
            android:layout_width="163dp"
            android:layout_height="39dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toStartOf="@+id/ti_maxrange"
            app:layout_constraintHorizontal_bias="0.561"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sr_range">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edit_text"
                android:ems="10"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_maxrange"
            android:layout_width="163dp"
            android:layout_height="39dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.881"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sr_range">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edit_text"
                android:ems="10"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_minkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="832dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_minrange"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.083"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_maxkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="315dp"
            android:layout_marginTop="832dp"
            android:layout_marginEnd="70dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_maxrange"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.403"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="920dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_rating"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.083"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_rating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="checkBoxClick"
            android:layout_marginBottom="8dp"
            android:button="@color/primary"
            android:background="@drawable/custom_rate1"
            app:layout_constraintBottom_toTopOf="@+id/btn_apply"
            app:layout_constraintEnd_toEndOf="@+id/tv_rating"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_rating2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:button="@color/primary"
            android:background="@drawable/custom_rate2"
            android:onClick="checkBoxClick"
            app:layout_constraintBottom_toTopOf="@+id/btn_apply"
            app:layout_constraintStart_toEndOf="@+id/cb_rating1"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_rating3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:button="@color/primary"
            android:background="@drawable/custom_rate3"
            android:onClick="checkBoxClick"
            app:layout_constraintBottom_toTopOf="@+id/btn_apply"
            app:layout_constraintStart_toEndOf="@+id/cb_rating2"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_rating4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:button="@color/primary"
            android:background="@drawable/custom_rate4"
            android:onClick="checkBoxClick"
            app:layout_constraintBottom_toTopOf="@+id/btn_apply"
            app:layout_constraintEnd_toStartOf="@+id/cb_rating5"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/cb_rating3"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_rating5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="8dp"
            android:button="@color/primary"
            android:background="@drawable/custom_rate5"            android:onClick="checkBoxClick"
            app:layout_constraintBottom_toTopOf="@+id/btn_apply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cb_rating4"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply"
            android:layout_width="360dp"
            android:layout_height="53dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/poppins_semibold"
            android:outlineSpotShadowColor="@android:color/transparent"
            android:text="@string/btn_filter"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
