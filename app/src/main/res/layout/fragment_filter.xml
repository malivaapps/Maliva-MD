<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_filtersheet"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:context=".view.filter.FilterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_button_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_filter"
            android:textColor="@color/text_primary"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_back" />


        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:clickable="true"
            android:fontFamily="@font/poppins_medium"
            android:onClick="onClick"
            android:text="@string/tv_reset"
            android:textColor="@color/primary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_filter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_filter" />

        <TextView
            android:id="@+id/tv_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_types"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_filter" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_types">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipActivities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:chipSpacingHorizontal="10dp"
                app:chipSpacingVertical="-5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent">
            </com.google.android.material.chip.ChipGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_categgorie"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.098"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ly_types" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ly_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_categories">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:chipSpacingHorizontal="10dp"
                app:chipSpacingVertical="-5dp"
                app:layout_constraintBottom_toBottomOf="@id/ly_categories"
                app:layout_constraintEnd_toEndOf="@id/ly_categories"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="@id/ly_categories">


            </com.google.android.material.chip.ChipGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_price"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ly_categories" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/sr_price"
            style="@style/Widget.App.Slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.27"
            app:layout_constraintStart_toStartOf="parent"
            app:trackHeight="8dp"
            app:thumbStrokeWidth="5dp"
            app:thumbStrokeColor="@color/white"
            app:thumbWidth="30dp"
            app:thumbHeight="30dp"
            app:labelBehavior="gone"
            android:valueFrom="0"
            android:valueTo="120000"
            app:values="@array/initial_slider_values"
            app:layout_constraintTop_toBottomOf="@+id/tv_price" />

        <TextView
            android:id="@+id/tv_maxprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/tv_maxprice"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sr_price" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MaxPrice"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="0.878"
            app:layout_constraintStart_toEndOf="@id/MinPrice"
            app:layout_constraintTop_toBottomOf="@+id/tv_maxprice">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/maxPriceEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:ems="10">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_minprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/tv_Minprice"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sr_price" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MinPrice"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toStartOf="@+id/MaxPrice"
            app:layout_constraintHorizontal_bias="0.878"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_maxprice">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/minPriceEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:ems="10">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tv_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_range"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MaxPrice" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/sr_range"
            style="@style/Widget.App.Slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.27"
            app:layout_constraintStart_toStartOf="parent"
            app:trackHeight="8dp"
            app:thumbStrokeWidth="5dp"
            app:thumbStrokeColor="@color/white"
            app:thumbWidth="30dp"
            app:thumbHeight="30dp"
            app:labelBehavior="gone"
            android:valueFrom="0"
            android:valueTo="1000"
            app:values="@array/initial_slider_range"
            app:layout_constraintTop_toBottomOf="@+id/tv_range"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/maxRange"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toEndOf="@id/minRange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.881"
            app:layout_constraintTop_toBottomOf="@+id/tv_maxkm">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/maxRangeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:ems="10">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/minRange"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toStartOf="@id/maxRange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.881"
            app:layout_constraintTop_toBottomOf="@+id/tv_maxkm">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/minRangeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:ems="10">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tv_maxkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/tv_maxrange"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sr_range" />

        <TextView
            android:id="@+id/tv_minkm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/tv_minrange"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sr_range" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/tv_rating"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/maxRange" />


        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_rating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:onClick="checkBoxClick"
            android:layout_marginBottom="8dp"
            android:button="@color/primary"
            android:background="@drawable/custom_rate1"
            app:layout_constraintBottom_toTopOf="@+id/btn_apply"
            app:layout_constraintEnd_toEndOf="@+id/tv_rating"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_rating2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:button="@color/primary"
            android:background="@drawable/custom_rate2"
            android:onClick="checkBoxClick"
            app:layout_constraintBottom_toTopOf="@+id/btn_apply"
            app:layout_constraintStart_toEndOf="@+id/cb_rating1"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_rating3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:button="@color/primary"
            android:background="@drawable/custom_rate3"
            android:onClick="checkBoxClick"
            app:layout_constraintBottom_toTopOf="@+id/btn_apply"
            app:layout_constraintStart_toEndOf="@+id/cb_rating2"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_rating4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:button="@color/primary"
            android:background="@drawable/custom_rate4"
            android:onClick="checkBoxClick"
            app:layout_constraintBottom_toTopOf="@+id/btn_apply"
            app:layout_constraintEnd_toStartOf="@+id/cb_rating5"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/cb_rating3"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_rating5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="8dp"
            android:button="@color/primary"
            android:background="@drawable/custom_rate5"            android:onClick="checkBoxClick"
            app:layout_constraintBottom_toTopOf="@+id/btn_apply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cb_rating4"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginHorizontal="24dp"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/poppins_semibold"
            android:outlineSpotShadowColor="@android:color/transparent"
            android:text="@string/btn_filter"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progressBarCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- ProgressBar for Types -->
        <ProgressBar
            android:id="@+id/progressBarTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
